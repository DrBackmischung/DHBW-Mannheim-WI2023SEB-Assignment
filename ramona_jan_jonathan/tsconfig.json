{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",                        // alle Quellverzeichnisse einschlie√üen
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "consumer/**/*",
    "producer/**/*",
    "shared/**/*"                         // optional, falls du gemeinsame Module hast
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
